<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="391.0" prefWidth="349.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.strathmore.dsassignment.ClientController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fx:id="logoView" fitHeight="113.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@strath_logo.png" />
      </image></ImageView>
   <AnchorPane prefHeight="200.0" prefWidth="250.0">
      <children>
         <VBox alignment="CENTER" layoutX="119.0" prefHeight="200.0" prefWidth="216.0" spacing="10.0">
            <children>
               <TextField fx:id="studentNumberField" promptText="Enter Student Number" />
               <TextField fx:id="studentNameField" promptText="Enter Name" />
               <TextField fx:id="facultyField" promptText="Enter Faculty/School" />
               <TextField fx:id="messageField" promptText="Enter Message with personal code" />
            </children></VBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="115.0" spacing="17.0">
            <children>
               <Label text="Student Number" />
               <Label text="Student Name" />
               <Label text="Faculty/School" />
               <Label text="Message" />
            </children>
         </VBox>
      </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
   </AnchorPane>
   <Label fx:id="errorText" textAlignment="CENTER" textFill="#f70808" />
    <Button onAction="#onHelloButtonClick" style="-fx-background-color: blue;" text="SEND" textFill="WHITE">
      <font>
         <Font size="14.0" />
      </font></Button>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <ProgressIndicator prefHeight="33.0" prefWidth="27.0" />
         <Label fx:id="successText" text="Sending..." textFill="#0fc108">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </children>
   </HBox>
</VBox>
